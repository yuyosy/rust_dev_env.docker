{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "Build single Rust file",
            "type": "shell",
            "command": "rustc",
            "args": [
                "--out-dir",
                "${workspaceRoot}/debug/",
                "-C",
                "debug_assertions=yes",
                "-g",
                "${file}"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        }
	]
}